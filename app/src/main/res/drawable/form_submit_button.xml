<?xml version="1.0" encoding="utf-8" ?>

<!-- Adapted from https://stackoverflow.com/questions/9334618/rounded-button-in-android -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Non focused states
     -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/form_submit_button_default" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/form_submit_button_default" />
    <!--  Focused states
     -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/form_submit_button_default" />
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/form_submit_button_default" />
    <!--  Pressed
     -->
    <item android:state_pressed="true" android:drawable="@drawable/form_submit_button_pressed" />
</selector>

